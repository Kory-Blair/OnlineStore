
@{

    ViewBag.Title = "SignIn";

}
@if (ViewBag.Error != null)
{
    foreach (string s in (IEnumerable<string>)ViewBag.Error)
    {
        <div>Error: @s</div>
    }
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<h1 style="margin-top:30px;">Sign In</h1>
<div style="margin-top:25px;">
    @using (Html.BeginForm())
    {
        <div>
            <label for="username" class="control-label">Username</label>
            <input name="username" type="email" class="form-control" placeholder="Username" data-error="Invaild email address"/>
        </div>
        <div class="help-block with-errors"></div>
        <div>
            <label for="password" class="control-label">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Password" />
        </div>
        <div style="margin-top:20px;">
            <label for="staySignedIn">Stay Signed In</label>
            <input name="staySignedIn" type="checkbox" />
        </div>
        <div style="margin-top:7px;">
        <input type="submit" value="Login" />
        </div>
    }

</div>


    <div>
        <div style="margin-top:10px;">
            @Html.ActionLink("Register for a new account", "Register")
        </div>
        <div>
            @Html.ActionLink("Recover your password", "ForgotPassword")
        </div>
    </div>
